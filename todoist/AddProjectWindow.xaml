<Window x:Class="todoist.AddProjectWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:todoist"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Добавить проект" Height="300" Width="400">
    <Grid>
        <TextBox Name="ProjectName" Width="300" Height="30" Margin="10"/>
        <TextBox Name="ProjectDescription" Width="300" Height="80" Margin="10,50,10,10"/>
        <Button Content="Сохранить" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"
                Click="SaveProject_Click"/>
    </Grid>
</Window>
