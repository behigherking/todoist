<Window x:Class="todoist.AddProjectWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:todoist"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
  Title="Добавить проект" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="ProjectNameTextBox" Width="300" Margin="0,10"/>
            <TextBox Name="ProjectDescriptionTextBox" Width="300" Margin="0,10"/>
            <Button Content="Добавить" Width="100" Height="30" HorizontalAlignment="Right" Click="AddProjectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>