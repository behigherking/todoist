<Window x:Class="todoist.AddTaskWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:todoist"
      mc:Ignorable="d" 
    Title="Добавить задачу" Height="300" Width="400">
    <Grid>
        <TextBox Name="TaskName" Width="300" Height="30" Margin="10"/>
        <TextBox Name="TaskDescription" Width="300" Height="80" Margin="10,50,10,10" />
        <ComboBox Name="TaskStatus" Width="300" Height="30" Margin="10,140,10,10">
            <ComboBoxItem>Новая</ComboBoxItem>
            <ComboBoxItem>В процессе</ComboBoxItem>
            <ComboBoxItem>Завершена</ComboBoxItem>
        </ComboBox>
        <Button Content="Сохранить" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Button_Click" />
    </Grid>
</Window>