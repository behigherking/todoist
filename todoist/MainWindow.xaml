<Page x:Class="todoist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="трекер задач" Height="600" Width="800">
    <Grid>
        <TabControl Name="TabControl">

            <TabItem Header="Задачи">
                <Grid>
                    <DataGrid Name="TasksDataGrid" AutoGenerateColumns="True" Margin="10" />
                    <Button Content="Добавить задачу" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"
                            Click="AddTask_Click"/>
                </Grid>
            </TabItem>

 
            <TabItem Header="Проекты">
                <Grid>
                    <DataGrid Name="ProjectsDataGrid" AutoGenerateColumns="True" Margin="10"/>
                    <Button Content="Добавить проект" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"
                            Click="AddProject_Click"/>
                </Grid>
            </TabItem>


            <TabItem Header="Пользователи" Height="20" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="39*"/>
                        <ColumnDefinition Width="358*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Name="UsersDataGrid" AutoGenerateColumns="True" Margin="10,10,10,10" Grid.ColumnSpan="2"/>
                    <Button Content="Добавить пользователя" Width="142" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,27,20"
                            Click="AddUser_Click" Grid.Column="1"/>
                </Grid>
            </TabItem>


            <TabItem Header="Комментарии">
                <Grid>
                    <DataGrid Name="CommentsDataGrid" AutoGenerateColumns="True" Margin="10"/>
                    <Button Content="Добавить комментарий" Width="144" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"
                            Click="AddComment_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>


